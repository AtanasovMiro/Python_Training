MENU = {"espresso" :{"ingredients" : {'water': 50, 'coffee': 18}, "cost": 1.50,},
        "latte" :{"ingredients" : {"water": 200, "coffee": 24, "milk": 150}, "cost" : 2.50,},
        "cappuccino": {"ingredients": {"water": 250, "coffee": 25, "milk": 150}, "cost": 3.00,}
        }

resources = {"water": 300, "milk": 200, "coffee": 100,}
is_on = True
profit = 0

def report():
    print(f"Water: {resources['water']}ml")
    print(f"Milk: {resources['milk']}ml")
    print(f"Coffee: {resources['coffee']}ml")
    print(f"Money: ${profit}")

def is_resource_sufficient(order_ingredients):
    """Returns True if the resources are sufficient and False if they are not."""
    for item in order_ingredients:
        if order_ingredients[item] >= resources[item]:
            print(f"Sorry there is not enough {item}")
            return False
    return True

def process_coins():
    """Returns the total calculated from the inserted coins."""
    print("Please insert coins. ")
    quarters_deposited = int(input("How many quarters? ")) * 0.25
    dimes_deposited = int(input("How many dimes? ")) * 0.10
    nickles_deposited = int(input("How many nickles? ")) * 0.05
    pennies_deposited = int(input("How many pennies? ")) * 0.01
    total_deposited = quarters_deposited + dimes_deposited + nickles_deposited + pennies_deposited
    return total_deposited

def measurements(needed_water, needed_milk, needed_coffee, water_tank, milk_tank, coffee_tank):
    if needed_water <= water_tank and needed_milk <= milk_tank and needed_coffee <= coffee_tank:
        water_tank -= needed_water
        milk_tank -= needed_milk
        coffee_tank -= needed_coffee

    return water_tank, milk_tank, coffee_tank

def make_coffee(drink_name, order_ingredients):
    """Deduct the required ingredients from the resources. """
    for item in order_ingredients:
        resources[item] -= order_ingredients[item]

    print(f"Here is your {drink_name}.")

def is_transaction_successful(money_received, drink_cost):
    """Return True when the payment is accepted, or False if the money is insufficient. """
    if money_received >= drink_cost:
        change = round(money_received - drink_cost, 2)
        if change > 0:
            print(f"Here is ${change} in change.")

        global profit
        profit += drink_cost
        return True
    else:
        print("Sorry that's not enough money. Money refunded.")
        return False

while is_on:
    choice = input("What would you like? (Espresso/Latte/Cappuccino): ").lower()
    if choice == 'off':
        is_on = False
    elif choice == 'report':
        report()
    else:
        drink = MENU[choice]
        if is_resource_sufficient(drink["ingredients"]):
            payment = process_coins()
            if is_transaction_successful(payment, drink["cost"]):
                make_coffee(choice, drink["ingredients"])
